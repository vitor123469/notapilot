{
  "$schema": "https://turborepo.dev/schema.json",
  "ui": "tui",
  "globalEnv": [
    "SUPABASE_SERVICE_ROLE_KEY",
    "TWILIO_DEFAULT_TENANT_ID",
    "TWILIO_DEFAULT_COMPANY_ID",
    "META_WA_VERIFY_TOKEN",
    "META_APP_SECRET",
    "META_WA_ACCESS_TOKEN",
    "META_DEFAULT_TENANT_ID",
    "META_DEFAULT_COMPANY_ID",
    "META_WA_PHONE_NUMBER_ID",
    "CRON_SECRET",
    "TWILIO_ACCOUNT_SID",
    "TWILIO_AUTH_TOKEN",
    "TWILIO_FROM",
    "VERCEL_ENV",
    "CRON_STALL_THRESHOLD_MINUTES",
    "ADMIN_ALERT_PHONE",
    "ADMIN_MONITOR_TOKEN",
    "ADMIN_CONFIG_TOKEN"
  ],
  "tasks": {
    "build": {
      "dependsOn": ["^build"],
      "inputs": ["$TURBO_DEFAULT$", ".env*"],
      "outputs": [".next/**", "!.next/cache/**"]
    },
    "lint": {
      "dependsOn": ["^lint"]
    },
    "check-types": {
      "dependsOn": ["^check-types"]
    },
    "dev": {
      "cache": false,
      "persistent": true
    }
  }
}
